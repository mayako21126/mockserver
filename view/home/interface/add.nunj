    {% endif %}
    {% if api_parms_desc |length ===0 or api_parms_desc|trim|length===0 %}
        {% set api_parms_desc='{
                "username": "'~LN.interface.add.paramSpecification ~'",
                "password": "'~LN.interface.add.paramSpecification ~'"
        }' %}
    {% endif %}
    {% if api_header |length ===0 or api_header|trim|length===0 %}
        {% set api_header=' {
